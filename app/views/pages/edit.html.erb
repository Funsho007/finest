<h1>Edit <%= @page.title %></h1>

<%= form_with(model: @page, url: page_path(@page.permalink), local: true) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div class="actions">
    <%= form.submit "Save" %>
  </div>
<% end %>
