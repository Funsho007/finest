<h1>Order Details - Order ##<%= @order.id %></h1>

<p>Order Date: <%= @order.order_date.strftime('%Y-%m-%d') %></p>
<p>Status: <%= @order.status.capitalize %></p>
<p>Subtotal: <%= number_to_currency(@subtotal) %></p>
<p>Total Amount: <%= number_to_currency(@order.total_amount) %></p>

<h2>Items</h2>
<ul>
  <% @order.order_items.each do |item| %>
    <li>
      <%= item.quantity %> x <%= item.product.name %> - <%= number_to_currency(item.price) %>
    </li>
  <% end %>
</ul>

<%= link_to 'Back to Orders', orders_path %>
